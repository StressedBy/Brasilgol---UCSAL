programa {
  funcao inicio() {
    real n1, n2, n3, n4, media
    escreva("Ola menino moço, turubom???\n Digite a primeira nota do aluno: ")
    leia(n1)
    escreva("\nDigite a segunda nota:")
    leia(n2)
    escreva("\nDigite a terceira nota:")
    leia(n3)
    escreva("\nDigite a quarta nota:")
    leia(n4)

    media = (n1+n2+n3+n4)/4

    se(media >= 7) {
      escreva("Esse aluno é bem very brocation! Passou voano!")
    } senao {
      escreva("Mamou, papae! Tá reprovado e nem adianta chorar.")
    }
  }
}
